<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back / Cancel -->
        <ImageButton
            android:id="@+id/backButtonAddClass"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Class"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Class Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editClassName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., User Interface Design (LEC)"
            android:layout_marginBottom="16dp" />

        <!-- Class Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Time"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editClassTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Mon, Wed 9:30â€“10:45 AM"
            android:layout_marginBottom="16dp" />

        <!-- Class Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editClassLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Digital Computer Lab, Rm. 1320"
            android:layout_marginBottom="24dp" />

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginLeft="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>


