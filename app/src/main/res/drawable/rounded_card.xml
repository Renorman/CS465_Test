<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- SHADOW LAYER -->
    <item
        android:left="2dp"
        android:top="4dp"
        android:right="2dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <!-- Soft, subtle shadow color -->
            <solid android:color="#22000000" /> <!-- 13% opaque black -->
        </shape>
    </item>

    <!-- CARD LAYER -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>

</layer-list>
